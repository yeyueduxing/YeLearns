<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="sites"
            type="com.yeyue.learns.enity.diycode.DiySiteList" />
    </data>

    <com.yeyue.library.widgets.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ye_color_Driver"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@{sites.name}"
            android:textColor="@color/color_Hint_Word"
            app:layout_paddingPercent="2%w"
            app:layout_textSizePercent="3.5%w"
            tools:text="GcsSloop" />
    </com.yeyue.library.widgets.percent.PercentLinearLayout>
</layout>