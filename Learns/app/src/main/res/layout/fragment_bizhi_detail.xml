<?xml version="1.0" encoding="utf-8"?>
<com.yeyue.library.widgets.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_heightPercent="100%w" />
    <ImageView
        android:id="@+id/ivVerticalCover"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_heightPercent="150%w" />
    <ImageView
        android:id="@+id/ivLiveCover"
        app:layout_widthPercent="50%w"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_marginPercent="5%w"
        app:layout_heightPercent="75%w"
        />
    <com.yeyue.library.widgets.percent.PercentLinearLayout
        style="@style/AppMargin"
        android:orientation="horizontal"
        app:layout_marginPercent="2%w">

        <com.ldoublem.thumbUplib.ThumbUpView
            android:id="@+id/tvZan"
            style="@style/DetailFollow" />
        <TextView
            android:id="@+id/tvCollect"
            style="@style/DetailFollow"
            tools:text="收藏" />
        <TextView
            style="@style/DetailFollow"
            tools:text="广告" />
    </com.yeyue.library.widgets.percent.PercentLinearLayout>

</com.yeyue.library.widgets.percent.PercentLinearLayout>
