<com.yeyue.library.widgets.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.yeyue.library.widgets.percent.PercentRelativeLayout
        android:id="@+id/nav_header_layout"
        android:layout_width="match_parent"
        android:background="@drawable/side_nav_bar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_heightPercent="66.5%w">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_header_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_yeyue"
            app:layout_heightPercent="20%w"
            app:layout_widthPercent="20%w" />

        <TextView
            android:id="@+id/nav_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_header_image"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="2%w"
            android:text="夜神月"
            android:textColor="@color/color_Main_Body"
            app:layout_textSizePercent="6%w" />

    </com.yeyue.library.widgets.percent.PercentRelativeLayout>


</com.yeyue.library.widgets.percent.PercentLinearLayout>
